<odoo>
    <record id="view_move_form_inherit_finance_custom" model="ir.ui.view">
        <field name="name">account.move.form.inherit.finance.custom</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='invoice_date']" position="attributes">
                <attribute name="string">Document Date</attribute>
            </xpath>
            <xpath expr="//field[@name='invoice_date']" position="after">
                <field name="finance_custom_ref" string="Finance Custom Ref" />
            </xpath>
        </field>
    </record>

    <record id="view_move_tree_inherit_finance_custom" model="ir.ui.view">
        <field name="name">account.move.tree.inherit.finance.custom</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_tree" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='invoice_date']" position="after">
                <field name="finance_custom_ref" optional="show" />
            </xpath>
        </field>
    </record>
</odoo>